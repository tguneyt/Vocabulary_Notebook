<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="@color/turkuaz"
        tools:ignore="MissingConstraints"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/lacivert"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Enter Languages"
                android:textColor="@color/beyaz"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="360dp"
            android:layout_height="10dp"
            android:background="@color/turkuaz"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/turuncu"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal">
            <EditText

                android:id="@+id/editlanguage1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Language 1...." />
            <View
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:background="@color/turkuaz"
               >

            </View>
            <EditText
                android:id="@+id/editlanguage2"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Language 2...." />


        </LinearLayout>
        <View
            android:layout_width="360dp"
            android:layout_height="10dp"
            />



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonok"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/yesil"
            android:text="Ok"
            android:textStyle="bold"/>
        <View
            android:layout_width="25dp"
            android:layout_height="20dp"
          />
        <Button
            android:id="@+id/buttoncancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Cancel"
            android:backgroundTint="@color/kirmizi"
            android:textStyle="bold"/>


    </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>