<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/voca"
    tools:context=".wordhunting_tr">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/laymatch"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:paddingTop="20dp"
                android:id="@+id/huntingtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/kirmizi"
                android:gravity="center"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layall2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center|top"

            >
            <View
                android:layout_width="20dp"
                android:layout_height="80dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's find them!"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="@color/kirmizi"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/target"

                >
            </ImageView>
            <View
                android:layout_width="20dp"
                android:layout_height="40dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">


                <Button
                    android:id="@+id/tr"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="GO"
                    android:textColor="@color/beyaz"
                    android:textStyle="bold"
                    android:backgroundTint="@color/kirmizi"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layall_tr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="0.2"
                android:gravity="center"
                tools:ignore="Suspicious0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/targetword_card1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/lacivert"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardUseCompatPadding="true"

                    >

                    <TextView
                        android:id="@+id/targetword_text1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/beyaz"
                        android:textSize="20sp" />


                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/word_card11"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:clickable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/lacivert"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:id="@+id/lay11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wordtext11"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/beyaz"
                        android:textSize="20sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/word_card21"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:clickable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/lacivert"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/lay21"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wordtext21"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/beyaz"
                        android:textSize="20sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/word_card31"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:clickable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/lacivert"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/lay31"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wordtext31"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/beyaz"
                        android:textSize="20sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/word_card41"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:clickable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/lacivert"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/lay41"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wordtext41"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/beyaz"
                        android:textSize="20sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/word_card51"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:clickable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/lacivert"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/lay51"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wordtext51"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/beyaz"
                        android:textSize="20sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/word_card61"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:clickable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/lacivert"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/lay61"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wordtext61"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/beyaz"
                        android:textSize="20sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.08"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:src="@drawable/notebookedit2"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>